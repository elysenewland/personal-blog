---
const { title, description, href, languages } = Astro.props;
---

<li class="project-card group">
  <h3 class="project-card-title">
    <a href={href} class="project-card-link stretched-link">
      {title}
    </a>
  </h3>
  <p class="project-card-languages">{languages}</p>
  <p>{description}</p>
  <svg
    class="project-card-arrow group-hover:text-skin-accent"
    width="18"
    height="18"
    viewBox="0 0 18 18"
    fill="none"
    xmlns="http://www.w3.org/2000/svg"
  >
    <path
      d="M4.22626 1.92462H16.0755M16.0755 1.92462L16.0755 13.7739M16.0755 1.92462L1.22626 16.7739"
      stroke="currentColor"
      stroke-width="2"
      stroke-linecap="round"
      stroke-linejoin="round"></path>
  </svg>
</li>

<style>
  .project-card {
    @apply relative mb-5 rounded-[1.5rem] bg-skin-card/50 p-6;
  }

  .project-card-arrow {
    @apply absolute top-0 right-0 mt-6 mr-6 h-[1.31rem] w-[1.04rem] text-skin-base;
  }

  .project-card-link {
    @apply inline-block text-lg font-medium text-skin-accent decoration-dashed underline-offset-4 focus-visible:no-underline focus-visible:underline-offset-0;
  }

  .stretched-link::after {
    @apply absolute inset-0 z-10;
    content: "";
  }

  .project-card-title {
    @apply text-lg font-medium decoration-dashed hover:underline;
  }

  .project-card-languages {
    @apply mb-3 text-sm text-skin-base/75;
  }
</style>
